pipeline
{
    agent 
    { 
        label 'ubuntu'
    }
    post
    {
        always
        {
            echo 'Job completed check Yourself if it was a success or not'
            mail subject: 'Job is completed', 
                body: """Job's done for $env.JOB_NAME
                                        $env.BUILD_NUMBER
                          \n clickhere: $env.BUILD_URL""",
                to: 'tarunkumarpendem22@gmail.com'
        }
        success
        {
           mail subject: 'Job is completed successfully', 
                body: """Job's done for $env.JOB_NAME
                                        $env.BUILD_NUMBER
                          \n clickhere: $env.BUILD_URL""",
                to: 'tarunkumarpendem22@gmail.com' 
           junit '**/surefire-reports/*.xml'
           
        }
        failure
        {
            echo 'You messed up'
            mail subject: 'You messed up the job again as usual', 
                body: """Job's done for $env.JOB_NAME
                                        $env.BUILD_NUMBER
                          \n clickhere: $env.BUILD_URL""",
                to: 'tarunkumarpendem22@gmail.com'
        }
    }
    parameters
    {
        choice(name: 'Branch_to_Build', 
               choices: ['master', 'GOL'], 
               description: 'choose the branch to build')
        string(name: 'Maven_Goal', 
               defaultValue: 'package', 
               description: 'Goal to be selected')       
    }
    stages 
    {
        stage('package') 
        {
            steps 
            {
                git url: 'https://github.com/tarunkumarpendem/game-of-life.git', 
                    branch: "${params.Branch_to_Build}"
            }
        } 
        stage('build')
        {   
            steps
            {
               script
               { 
                sh "/usr/share/maven/bin/mvn ${params.Maven_Goal}"
               }
            
            } 
        }
        stage('Archiving_artifacts')
        {
            steps
            {
               archiveArtifacts artifacts: '**/target/*.war'
            }
        }
    }
}














