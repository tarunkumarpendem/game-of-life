pipeline
{
    agent 
    { 
        label 'ubuntu'
    }
    parameters
    {
        choice(name: 'Branch_to_Build', 
               choices: ['master', 'GOL'], 
               description: 'choose the branch to build')
        string(name: 'Maven_Goal', 
               defaultValue: 'staging', 
               description: 'select the Maven Goal')
    }
    triggers 
    { 
        pollSCM('* * * * * ') 
    }
    stages 
    {
        stage('package') 
        {
            steps 
            {
                git url: 'https://github.com/tarunkumarpendem/game-of-life.git', 
                    branch: "${params.Branch_to_Build}"
            }
        } 
        stage('build')
        {   
            steps
            {
               script
               { 
                sh "/usr/share/maven/bin/mvn ${params.Maven_Goal}"
               }
            
            }
              
        }
        stage('Archiving_artifacts')
        {
            steps
            {
               archiveArtifacts artifacts: '**/target/*.war'
            }
        }
        stage('Junit_reports')
        {
            steps
            {
                junit '**/surefire-reports/*.xml'
            }
        }
        
    }
}








