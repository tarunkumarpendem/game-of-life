pipeline
{
    agent 
    { 
        label 'ubuntu'
    }
    stages 
    {
        stage('package') 
        {
            steps 
            {
                git url: 'https://github.com/tarunkumarpendem/game-of-life.git', 
                    branch: 'GOL'
            }
        }    
        stage('build')
        {   
            steps
            {
               script
               { 
                sh """export PATH='/usr/lib/jvm/java-8-openjdk-amd64/bin:$PATH',
                      /usr/share/maven/bin/mvn clean compile package test install"""
               }
            
            }
              
        }
        stage('Archiving_artifacts')
        {
            steps
            {
               archiveArtifacts artifacts: '**/target/*.war'
            }
        }
        stage('Junit_reports')
        {
            steps
            {
                junit '**/surefire-reports/*.xml'
            }
        }
        
    }
}








